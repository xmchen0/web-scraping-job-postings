<div class="col-md-12">
    {{#if article}} {{#each article}}
    <div class="card">
        <div class="card-header">
            <h4>{{this.title}}</h4>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <p> {{this.title}}</p>
            <a href={{this.location}} target="_blank">{{this.link}}</a>
            <br>
            <br>
            <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Job</button>
        </div>
    </div>
    {{/each}} {{else}}
    <div class="card">
        <div class="card-body">
            <h4>Looks like we don't have any new jobs. Please press Scrape.</h4>
        </div>
    </div>
    {{/if}}
</div>