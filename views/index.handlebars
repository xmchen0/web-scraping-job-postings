    <div class="col-md-12">
        {{#if article}} {{#each article}}
        <div class="card">
            <div class="card-header">
                <h4>{{this.title}}</h4>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <p> {{this.date}}</p>
                <p> {{this.location}}</p>
                <a href={{this.link}} target="_blank">Read More</a>
                <br>
                <br>
                <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
            </div>
        </div>
        {{/each}} {{else}}
        <div class="card">
            <div class="card-body">
                <h4>Looks like we don't have any new articles. Please press Scrape.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>