{{!-----------*\
|* SAVED PAGE *|
\*------------}}

<div class="container">
    <div class="col-md-12">
        {{#if article}}
        {{#each article}}
        <div class="card">
            <div class="card-header">
                <h4>{{this.title}}</h4>Saved
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <p>{{this.date}}</p>
                <p>{{this.company}}</p>
                <p>{{this.location}}</p>
                <a href={{this.link}} target="_blank">Apply to job</a>
                <br><br>
                <button type="button" class="btn btn-success addNote" data-toggle="modal"
                    data-target="#noteModal{{this._id}}" data-id={{this._id}}>Add a Note</button>
                <button type="button" class="btn btn-danger delete" data-id={{this._id}}>Delete</button>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="card">
            <div class="card-body">
                <h4>You have no saved jobs.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>

{{!-- For each clicked Notes Modal --}}
{{#each article}}
{{> notes-modal }}
{{/each}}